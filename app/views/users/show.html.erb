<p id="notice"><%= notice %></p>
<% if User.find_by_id(session[:user_id]) === @user %>
	<%= link_to 'New Post', new_user_post_path(@user) %>
<% end %>

<h2><%= @user.name %></h2>
<div>
	<section>
		<%= render 'shared/stats' %>
	</section>
</div>
<div>
	<%= render 'follow_form' if session[:user_id] %>
</div>

<% @user.posts.last(25).reverse.each do |post| %>
  <div style="border: 3px solid blue; max-width: 20%; margin:15px;">
    <p><%= image_tag(post.url) %></p>
    <p style="font-weight: bold;"><%= post.content %></p>
  </div>
<% end %>



