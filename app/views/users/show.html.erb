<p id="notice"><%= notice %></p>

<h2><%= @user.name %></h2>
<div>
	<%# show users' following / followed by stats %>
	<section>
		<%= render 'shared/stats' %>
	</section>
</div>

<%# render form to follow / unfollow user %>
<div>
	<%= render 'follow_form' if session[:user_id] %>
</div>

<%# show usrs' most recent posts %>
<% @user.posts.last(25).reverse.each do |post| %>
  <div class="post">
  	<p><span><%= post.upvotes %><%= link_to 'â†‘', upvote_post_path(post), class: "upvote" %></p>
    <p><%= image_tag(post.url) %></p>
    <p style="font-weight: bold;"><%= post.content %></p>
  </div>
<% end %>